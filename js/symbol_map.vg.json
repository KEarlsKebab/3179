{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1300,
  "height": 600,
  "projection": {
    "type": "equirectangular",
    "center": [145.5, -36.5],
    "scale": 6000
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/data/victoria.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/data/VicNatParks.csv"
      },
      "transform": [{"filter": "datum.Year <= year_slider"}],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Area_Ha",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 10000, 100000, 300000, 600000],
            "range": [50, 100, 200, 500, 750, 1000]
          },
          "title": "Area (Ha)"
        },
        "color": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year Established",
          "scale": {"scheme": "greens", "domain": [1900, 2020]}
        },
        "tooltip": [
          {"field": "Name", "type": "nominal"},
          {"field": "Year", "type": "quantitative", "title": "Year Founded"},
          {"field": "Area_Ha", "type": "quantitative", "title": "Area (Ha)"},
          {"field": "Campsites", "type": "quantitative"},
          {
            "field": "Melbourne_Distance",
            "type": "quantitative",
            "title": "CBD distance (km)",
            "format": ".3s"
          }
        ]
      }
    }
  ],
  "params": [
    {
      "name": "year_slider",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ]
}
