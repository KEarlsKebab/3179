{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "width": 600,
      "height": 300,
      "title": "Campgrounds by National Park",
      "projection": {
        "type": "equirectangular",
        "center": [143, -38],
        "scale": 3500,
        "translate": [300, 225]
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/js/output.json",
            "format": {"type": "topojson", "feature": "Campgrounds"}
          },
          "transform": [
            {
              "filter": "slice(datum.properties.PARK_NAME, length(datum.properties.PARK_NAME) - 13) == 'National Park'"
            }
          ],
          "mark": {"type": "geoshape", "size": 50},
          "encoding": {
            "color": {
              "field": "properties.PARK_NAME",
              "type": "nominal",
              "title": "National Park",
              "legend":null
            },
            "opacity": {
              "condition": {"param": "parkSelect", "value": 1},
              "value": 0.1
            },
            "tooltip": [
              {"field": "properties.PARK_NAME", "type": "nominal", "title": "Park"},
              {"field": "properties.SITE_NAME", "type": "nominal", "title": "Site"}
            ]
          }
        }
      ]
    },
    {
      "width": 600,
      "height":100,
      "data": {
        "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/js/output.json",
        "format": {"type": "topojson", "feature": "Campgrounds"}
      },
      "transform": [
        {
          "filter": "slice(datum.properties.PARK_NAME, length(datum.properties.PARK_NAME) - 13) == 'National Park'"
        },
        {
          "aggregate": [{"op": "count", "as": "count"}],
          "groupby": ["properties.PARK_NAME"]
        }
      ],
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "properties.PARK_NAME",
          "type": "ordinal",
          "sort": "-y",
          "title": "National Park",
          "axis": {"labelAngle":40}
        },
        "y": {"field": "count", "type": "quantitative", "title": "No. of campsites per park"},
        "color": {
          "field": "properties.PARK_NAME",
          "type": "nominal",
          "scale": {"scheme": "accent"}
        },
        "opacity": {
          "condition": {"param": "parkSelect", "value": 1},
          "value": 0.1
        },
        "tooltip": [
          {"field": "properties.PARK_NAME", "title": "Park"},
          {"field": "count", "title": "No. of Camps"}
        ]
      },
      "params": [
        {
          "name": "parkSelect",
          "select": {"type": "point", "fields": ["properties.PARK_NAME"]}
        }
      ]
    }
  ]
}
