{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 300,
  "width": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/data/WhyVisitorsGo.csv"
  },
  "mark": {"type":"arc"},
  "encoding": {
    "theta": {"field": "Proportion", "type": "quantitative", "stack": true},
    "color": {
      "field": "Reason",
      "type": "nominal",
      "legend": null,
      "sort": {"field": "Proportion", "order": "descending"}
    }
  },
  "layer": [
    {"mark": {"type": "arc", "outerRadius": 120},
    "encoding": {"tooltip":[{"field":"Reason"},{"field":"Proportion"}]}
    },
    {
      "mark": {"type": "text", "radius": 145},
      "encoding": {"text": {"field": "Reason", "type": "nominal"}}
    }
  ]
}
