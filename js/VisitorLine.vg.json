{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 275,
  "width": 400,
  "title": {
    "text": "Visitors over Time",
    "fontSize": 24,
    "color": "forestgreen"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/data/VisitorNumbers.csv"
  },
  "transform": [
    {
      "fold": ["National Parks", "Metropolitan Parks", "Piers"],
      "as": ["Category", "Visitors"]
    }
  ],
  "params": [
    {
      "name": "CategorySelect",
      "select": {"type": "point", "fields": ["Category"]},
      "bind": "legend",
      "value": [{"Category": "National Parks"}]
    }
  ],
  "mark": {"type": "line", "strokeWidth": 3},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "scale": {"domain": [2001, 2018]},
      "axis": {"titleFontSize":14}
    },
    "y": {
      "field": "Visitors",
      "type": "quantitative",
      "title": "Visitors (Millions)",
      "axis": {"titleFontSize":14}
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "title": "Type",
      "scale": {
        "domain": ["National Parks", "Metropolitan Parks", "Piers"],
        "range": ["green", "red", "blue"]
      },
      "legend": {"orient": "bottom-right", "labelFontSize":12}
    },
    "opacity": {
      "condition": {"param": "CategorySelect", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Year"},
      {"field": "Category"},
      {"field": "Visitors", "format": ".3s"}
    ]
  }
}
